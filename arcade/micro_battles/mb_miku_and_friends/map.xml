<map proto="1.5.0">
<include id="micro-battles"/>
<include id="gapple-kill-reward"/>
<name>MB: Miku and Friends</name>
<version>2.0.0</version>
<created>2025-05-16</created>
<objective>Eliminate the other teams before the time runs out! Watch out for the shrinking world border!</objective>
<gamemode>arcade</gamemode>
<gamemode>blitz</gamemode>
<authors>
    <author uuid="d5a64b26-15ea-46c4-8319-f9c83e82a1fa"/> <!-- bunbunbui -->
	<author uuid="1aad55f7-2dea-4f22-85ca-ad9de3a78609"/> <!-- Technodono -->
</authors>
<contributors>
    <contributor uuid="edbd4cdb-63a5-4cec-944c-2b6bda56f51f" contribution="Map Inspiration"/> <!-- Owehttamy -->
</contributors>
<constant id="resistance-time">0s</constant>
<kits>
    <kit id="new-kit">
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" unbreakable="true" material="stone pickaxe"/>
        <item slot="3" unbreakable="true" material="stone axe"/>
        <item slot="4" unbreakable="true" material="stone spade"/>
        <item slot="8" amount="8" material="apple"/>
        <item slot="28" amount="8" material="arrow"/>
        <chestplate locked="true" unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings locked="true" unbreakable="true" material="chainmail leggings"/>
        <boots locked="true" unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="oo">night_vision</effect>
    </kit>
</kits>
<spawns>
    <spawn team="blue-team" kit="new-kit">
        <regions>
            <point yaw="-45">11.5,7,11.5</point> <!-- Blue team should be in NW quadrant -->
        </regions>
    </spawn>
    <spawn team="green-team" kit="new-kit">
        <regions>
            <point yaw="45">11.5,7,-11.5</point> <!-- Green team should be in NE quadrant -->
        </regions>
    </spawn>
    <spawn team="red-team" kit="new-kit"> 
        <regions>
            <point yaw="135">-11.5,7,11.5</point> <!-- Red team should be in SE quadrant -->
        </regions>
    </spawn>
    <spawn team="yellow-team" kit="new-kit">
        <regions>
            <point yaw="225">-11.5,7,-11.5</point> <!-- Yellow team should be in SW quadrant -->
        </regions>
    </spawn>
    <default>
        <regions>
            <point yaw="0">0.5,32,0.5</point> <!-- Obs spawn, should be modified as needed -->
        </regions>
    </default>
</spawns>
</map>